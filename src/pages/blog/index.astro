---
// src/pages/blog/index.astro
import Layout from '../../layouts/layout.astro';
import { getCollection } from 'astro:content';

// Uƒçitavanje svih blog postova preko Astro content API-ja
const allPosts = await getCollection('blog');

// Sortiranje po datumu (opadajuƒáe)
const posts = allPosts.sort((a, b) => {
  return b.data.date.valueOf() - a.data.date.valueOf();
});

// Kategorije za filter
const kategorije = [...new Set(posts.map(post => post.data.category))];
---

<Layout title="Blog | noviAstro" description="IT saveti, vesti i analize">
  
  <div class="blog-header">
    <h1>üìù <span class="accent">Blog</span></h1>
    <p class="subtitle">Saveti, analize i novosti iz sveta tehnologije</p>
  </div>
  
  <!-- Kategorije -->
  {kategorije.length > 0 && (
    <div class="blog-filters">
      <button class="filter-btn active">Svi postovi</button>
      {kategorije.map(kat => (
        <button class="filter-btn">{kat}</button>
      ))}
    </div>
  )}
  
  <!-- Grid sa postovima -->
  <div class="blog-grid">
    {posts.map((post) => {
      const { data } = post;
      
      return (
        <article class="blog-card">
          <a href={`/blog/${post.id}`}>
            <div class="card-content">
              <div class="card-meta">
                <span class="card-date">
                  üìÖ {data.date.toLocaleDateString('sr-RS')}
                </span>
                <span class="card-category">{data.category}</span>
                <span class="card-read-time">‚è±Ô∏è {data.readingTime} min</span>
              </div>
              
              <h2 class="card-title">{data.title}</h2>
              
              <p class="card-excerpt">{data.excerpt}</p>
              
              <div class="card-footer">
                <span class="card-author">üë§ {data.author}</span>
                <span class="read-more">Proƒçitaj vi≈°e ‚Üí</span>
              </div>
            </div>
          </a>
        </article>
      );
    })}
  </div>
  
  <!-- Poruka ako nema postova -->
  {posts.length === 0 && (
    <div class="no-posts">
      <p>Trenutno nema blog postova.</p>
    </div>
  )}
  
</Layout>

<!-- CSS ostaje isti kao ranije -->

<style>
  /* ... isti CSS kao ranije ... */
  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .blog-header h1 {
    font-size: 2.5rem;
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
  }
  
  .accent {
    color: var(--primary-medium);
    font-weight: 300;
  }
  
  .subtitle {
    color: var(--gray-600);
    font-size: 1.2rem;
  }
  
  .blog-filters {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .filter-btn {
    background: var(--gray-200);
    border: none;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    cursor: pointer;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    color: var(--gray-700);
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    background: var(--primary-medium);
    color: white;
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .blog-card a {
    text-decoration: none;
    color: inherit;
  }
  
  .card-content {
    padding: 2rem;
  }
  
  .card-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: var(--gray-500);
    flex-wrap: wrap;
  }
  
  .card-category {
    background: var(--primary-light);
    color: white;
    padding: 0.2rem 0.8rem;
    border-radius: 15px;
  }
  
  .card-title {
    color: var(--primary-dark);
    font-size: 1.3rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }
  
  .card-excerpt {
    color: var(--gray-600);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-200);
  }
  
  .card-author {
    color: var(--gray-700);
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .read-more {
    color: var(--primary-medium);
    font-size: 0.9rem;
    font-weight: 500;
    transition: transform 0.3s ease;
  }
  
  .blog-card:hover .read-more {
    transform: translateX(5px);
  }
  
  .no-posts {
    text-align: center;
    padding: 4rem;
    color: var(--gray-500);
  }
  
  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
    }
    
    .blog-filters {
      gap: 0.5rem;
    }
    
    .filter-btn {
      padding: 0.4rem 1rem;
      font-size: 0.85rem;
    }
  }
</style>