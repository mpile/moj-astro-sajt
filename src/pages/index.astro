<style>
  .hero {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-medium) 100%);
    border-radius: 16px;
    color: white;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    position: relative;
  }
  
  .hero .accent {
    color: var(--accent-medium);
    font-weight: 300;
  }
  
  .hero .subtitle {
    font-size: 1.2rem;
    color: var(--gray-200);
    max-width: 600px;
    margin: 0 auto 2rem;
    position: relative;
  }
  
  .status-message {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 12px;
    display: flex;
    gap: 1.5rem;
    align-items: center;
    max-width: 600px;
    margin: 2rem auto 0;
    border: 1px solid var(--warning);
    text-align: left;
  }
  
  .status-icon {
    font-size: 2rem;
  }
  
  .status-text h2 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--warning);
  }
  
  .status-text p {
    color: var(--gray-200);
    font-size: 0.95rem;
  }
  
  .info-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 4rem 0;
  }
  
  .info-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    border-top: 4px solid transparent;
  }
  
  .info-card:hover {
    transform: translateY(-5px);
    border-top-color: var(--accent-medium);
    box-shadow: var(--shadow-lg);
  }
  
  .info-card h3 {
    color: var(--primary-dark);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }
  
  .info-card p {
    color: var(--gray-600);
    line-height: 1.6;
  }
  
  .cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--gray-200);
    border-radius: 16px;
    margin: 3rem 0;
  }
  
  .cta-section h2 {
    color: var(--primary-dark);
    margin-bottom: 1rem;
    font-size: 2rem;
  }
  
  .cta-section p {
    color: var(--gray-700);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .status-message {
      flex-direction: column;
      text-align: center;
    }
    
    .info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>