  .tehnologije-tagovi {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .tag {
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-size: 0.95rem;
  }
  
  .cta {
    text-align: center;
    padding: 4rem 2rem;
    border-radius: 16px;
