    font-size: 1.1rem;
    opacity: 0.9;
  }
  
  .btn-veliko {
    background: white;
    color: var(--primary-dark);
    padding: 1.5rem 3rem;
    font-size: 1.2rem;
  }
  
  .cta-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-buttons {
      flex-direction: column;
    }
    
    .moduli-grid {
