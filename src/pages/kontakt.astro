---
// src/pages/kontakt.astro
import Layout from '../layouts/layout.astro';

// Formspree endpoint - ZAMENI SA TVOJIM!
const formEndpoint = "https://formspree.io/f/xeelvdne";
---

<Layout title="Kontakt">
  <div class="kontakt-header">
    <h1>Kontaktirajte <span class="accent">nas</span></h1>
    <p class="subtitle">Po≈°aljite poruku i javiƒáemo vam se u najkraƒáem roku</p>
  </div>
  
  <div class="kontakt-grid">
    <div class="info-section">
      <div class="info-card">
        <h3>üìû Telefon</h3>
        <p>011 / 454 - 8453</p>
        <p>064 / 194 - 9244</p>
      </div>
      
      <div class="info-card">
        <h3>‚úâÔ∏è Email</h3>
        <p>office@art-info.rs</p>
      </div>
      
      <div class="info-card">
        <h3>üìç Adresa</h3>
        <p>Pljevaljska 24<br />11050 Beograd</p>
      </div>
      
      <!-- Google Mapa -->
      <div class="info-card map-card">
        <h3>üó∫Ô∏è Kako do nas</h3>
        <div class="map-container">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2829.872853559304!2d20.448915315665154!3d44.78657957909867!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x475a7053a7c7f5a9%3A0x7c5f3b5b5f5b5f5b!2sPljevaljska%2024%2C%20Beograd!5e0!3m2!1sen!2srs!4v1620000000000!5m2!1sen!2srs" 
            width="100%" 
            height="250" 
            style="border:0; border-radius: 8px;" 
            allowfullscreen="" 
            loading="lazy"
            title="Mapa - Art-Info, Pljevaljska 24, Beograd">
          </iframe>
        </div>
        <p class="map-link">
          <a href="https://maps.google.com/?q=Pljevaljska+24+Beograd" target="_blank" rel="noopener noreferrer">
            Otvori u Google Maps ‚Üí
          </a>
        </p>
      </div>
      
      <div class="info-card warning-card">
        <h3>‚ö†Ô∏è Va≈æno</h3>
        <p>Zbog trenutnog statusa firme, odgovori mogu biti sporiji nego obiƒçno. Hvala na razumevanju.</p>
      </div>
    </div>
    
    <div class="form-section">
      <form action={formEndpoint} method="POST" class="kontakt-forma">
        <div class="form-row">
          <div class="form-group">
            <label for="ime">Ime i prezime *</label>
            <input 
              type="text" 
              id="ime" 
              name="ime" 
              required 
              placeholder="Va≈°e ime"
            />
          </div>
          
          <div class="form-group">
            <label for="email">Email *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="vas@email.com"
            />
          </div>
        </div>
        
        <div class="form-group">
          <label for="telefon">Telefon (opciono)</label>
          <input 
            type="tel" 
            id="telefon" 
            name="telefon" 
            placeholder="060 123 456"
          />
        </div>
        
        <div class="form-group">
          <label for="nacinKontakta">≈Ωeljeni naƒçin kontakta</label>
          <select id="nacinKontakta" name="nacinKontakta">
            <option value="bilo koji">Bilo koji</option>
            <option value="email">Email</option>
            <option value="telefon">Telefon</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="poruka">Poruka *</label>
          <textarea 
            id="poruka" 
            name="poruka" 
            rows="5" 
            required 
            placeholder="Va≈°a poruka..."
          ></textarea>
        </div>
        
        <div class="form-group checkbox">
          <input 
            type="checkbox" 
            id="pristanak" 
            name="pristanak" 
            required 
          />
          <label for="pristanak">Sla≈æem se sa ƒçuvanjem podataka radi odgovora na upit *</label>
        </div>
        
        <button type="submit" class="btn-submit">
          <span>Po≈°alji poruku</span>
          <span class="btn-icon">‚Üí</span>
        </button>
      </form>
    </div>
  </div>
</Layout>

<style>
  .kontakt-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .kontakt-header h1 {
    font-size: 2.5rem;
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
  }
  
  .kontakt-header .accent {
    color: var(--primary-medium);
    font-weight: 300;
  }
  
  .subtitle {
    color: var(--gray-600);
    font-size: 1.2rem;
  }
  
  .kontakt-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
  }
  
  .info-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .info-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    border-left: 4px solid var(--primary-light);
  }
  
  .info-card:hover {
    transform: translateX(5px);
    box-shadow: var(--shadow-md);
  }
  
  .info-card h3 {
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }
  
  .info-card p {
    color: var(--gray-700);
    margin: 0.25rem 0;
  }
  
  .warning-card {
    border-left-color: var(--warning);
    background: var(--accent-soft);
  }
  
  .form-section {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
  }
  
  .kontakt-forma {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-group label {
    margin-bottom: 0.5rem;
    color: var(--gray-700);
    font-weight: 500;
  }
  
  input, select, textarea {
    padding: 0.75rem;
    border: 2px solid var(--gray-200);
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: var(--gray-100);
    font-family: inherit;
  }
  
  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--primary-medium);
    background: white;
    box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
  }
  
  .checkbox {
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
  }
  
  .checkbox input {
    width: auto;
  }
  
  .btn-submit {
    background: var(--primary-dark);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .btn-submit:hover {
    background: var(--primary-medium);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-icon {
    transition: transform 0.3s ease;
  }
  
  .btn-submit:hover .btn-icon {
    transform: translateX(5px);
  }
  
  .map-card {
    padding: 1rem;
  }
  
  .map-container {
    margin: 1rem 0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }
  
  .map-link {
    text-align: right;
    margin-top: 0.5rem;
  }
  
  .map-link a {
    color: var(--primary-medium);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }
  
  .map-link a:hover {
    color: var(--primary-dark);
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .kontakt-header h1 {
      font-size: 2rem;
    }
    
    .kontakt-grid {
      grid-template-columns: 1fr;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .map-container iframe {
      height: 200px;
    }
  }
</style>