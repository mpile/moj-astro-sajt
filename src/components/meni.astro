---
// src/components/meni.astro
const linkovi = [
  { href: '/', naziv: 'Početna' },
  { href: '/resenja', naziv: 'Rešenja' },
  { href: '/usluge', naziv: 'Usluge' },  // ← DODATO
  { href: '/blog', naziv: 'Blog' },
  { href: '/kontakt', naziv: 'Kontakt' },
];

const { url } = Astro;
const trenutnaPutanja = url.pathname;
---

<nav>
  <div class="logo">
    <span class="logo-icon">◈</span>
    Art-Info
  </div>
  
  <ul class="menu">
    {linkovi.map((link) => (
      <li>
        <a 
          href={link.href}
          class={trenutnaPutanja === link.href ? 'active' : ''}
        >
          {link.naziv}
        </a>
      </li>
    ))}
  </ul>
  
  <div class="status-badge">
    <span class="dot"></span>
    <span>U likvidaciji</span>
  </div>
</nav>

<style>
  nav {
    background: var(--primary-dark);
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--shadow-md);
    border-bottom: 3px solid var(--accent-medium);
    width: 100%;
    box-sizing: border-box;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent-light);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 1px;
    white-space: nowrap;
  }
  
  .logo-icon {
    color: var(--accent-medium);
    font-size: 2rem;
  }
  
  .menu {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
  }
  
  .menu li {
    margin: 0;
    padding: 0;
  }
  
  .menu a {
    color: var(--gray-200);
    text-decoration: none;
    padding: 0.5rem 0.8rem;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-weight: 500;
    position: relative;
    display: block;
    min-width: 70px;
    text-align: center;
    white-space: nowrap;
  }
  
  /* Podvlačenje - fiksirano */
  .menu a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-medium);
    transition: width 0.2s ease;
  }
  
  .menu a:hover::after,
  .menu a.active::after {
    width: 100%;
  }
  
  .menu a:hover {
    color: white;
  }
  
  .menu a.active {
    color: white;
  }
  
  .status-badge {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid var(--warning);
    font-size: 0.9rem;
    color: var(--gray-200);
    white-space: nowrap;
  }
  
  .dot {
    width: 8px;
    height: 8px;
    background: var(--warning);
    border-radius: 50%;
    animation: pulse 2s infinite;
    display: inline-block;
  }
  
  @keyframes pulse {
    0% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
    100% { opacity: 1; transform: scale(1); }
  }
  
  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }
    
    .menu {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.3rem;
    }
    
    .menu a {
      min-width: 60px;
      font-size: 0.9rem;
    }
    
    .status-badge {
      font-size: 0.8rem;
      padding: 0.2rem 0.8rem;
    }
  }
</style>